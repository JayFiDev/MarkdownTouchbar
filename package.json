{
    "name": "markdown-touchbar",
    "displayName": "Markdown Touchbar",
    "description": "Macbook Pro Touch Bar extension to simplify markdown generation",
    "version": "1.0.3",
    "publisher": "JayFiDev",
    "engines": {
        "vscode": "^1.25.0"
    },
    "keywords": [
        "Macbook Pro Touch Bar",
        "Touchbar",
        "touchbar",
        "Macbook",
        "Markdown"
      ],
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "icon": "assets/logo.png",
    "galleryBanner": {
        "color": "#0A6A6A",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.makeBold",
                "title": " ùêÅ "
            },
            {
                "command": "extension.makeItalic",
                "title": " ùêº "
            },
            {
                "command": "extension.makeCode",
                "title": "</>"
            },
            {
                "command": "extension.createTable",
                "title": "|--|"
            },
            {
                "command": "extension.formatDoc",
                "title": "‚ò∑"
            },
            {
                "command": "extension.showMore",
                "title": "More" 
            }

        ],
        "menus": {
            "touchBar": [
                {
                    "command": "extension.makeBold",
                    "when": "editorLangId == markdown",
                    "group": "editing"
                },
                {
                    "command": "extension.makeItalic",
                    "when": "editorLangId == markdown",
                    "group": "editing"
                },
                {
                    "command": "extension.makeCode",
                    "when": "editorLangId == markdown",
                    "group": "editing"
                },
                {
                    "command": "extension.createTable",
                    "when": "editorLangId == markdown",
                    "group": "editing"
                },
                {
                    "command": "extension.formatDoc",
                    "when": "editorLangId == markdown",
                    "group": "editing"
                },
                {
                    "command": "extension.showMore",
                    "when": "editorLangId == markdown",
                    "group": "editing"
                }
            ]
        }
    },

    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JayFiDev/MarkdownTouchbar"
    }
}
